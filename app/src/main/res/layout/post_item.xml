<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/post_header_layout"
        android:layout_width="match_parent"
        android:layout_height="55dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/logo"
            android:src="@drawable/profile"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="15dp"
            android:layout_centerVertical="true"
            />

        <TextView
            android:id="@+id/user_name_post"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="user Name"
            android:layout_toEndOf="@+id/logo"
            android:layout_marginStart="10dp"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textStyle="bold"
            />

        <ImageView
            android:id="@+id/menu_img"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="15dp"
            android:src="@drawable/ic_menu"
            />

    </RelativeLayout>

    <ImageView
        android:id="@+id/post_img"
        android:layout_width="match_parent"
        android:src="@drawable/profile"
        android:layout_height="wrap_content"
        android:layout_below="@+id/post_header_layout"
        />

    <RelativeLayout
        android:id="@+id/post_footer_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/post_img">

        <ImageView
            android:id="@+id/heart"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            android:src="@drawable/ic_heart"
            />

        <ImageView
            android:id="@+id/reply"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/heart"
            android:layout_marginStart="15dp"
            android:src="@drawable/ic_reply"
            />

        <ImageView
            android:id="@+id/send"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/reply"
            android:layout_marginStart="15dp"
            android:src="@drawable/ic_send"
            />

        <ImageView
            android:id="@+id/bookmark"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="15dp"
            android:src="@drawable/save_post_unfilled"
            />

    </RelativeLayout>

    <TextView
        android:id="@+id/likes_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/post_footer_layout"
        android:text="1116 likes"
        android:layout_marginStart="15dp"
        android:textSize="13sp"
        android:textStyle="bold"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/description_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/likes_txt"
        android:text="descriotion text"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="5dp"
        android:textSize="13sp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/comments"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_below="@id/description_txt"
        android:text="view all 2 comment"
        android:textColor="#919090"
        android:textSize="12sp" />


</RelativeLayout>